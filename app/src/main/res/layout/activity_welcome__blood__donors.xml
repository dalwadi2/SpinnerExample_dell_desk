<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityimage_button"
    android:background="@drawable/custom_border"
    android:orientation="vertical"
    android:id="@+id/linear_layout">

    <Button
        android:id="@+id/xml_search_donor"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:text="Search Donor"
        android:textSize="15dp"
        android:textColor="#f5f5dc"
        android:background="#9370db"
        />
    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/linearLayout1" android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:text="Register"
            android:textSize="15dp"
            android:textColor="#f5f5dc"
            android:background="#2683c2"

            />
        <Button
            android:id="@+id/btn_update_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Update Profile"
            android:textSize="15dp"
            android:textColor="#f5f5dc"
            android:background="#66cdaa"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_donation_history"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:text="Donation History"
        android:textSize="15dp"
        android:textColor="#f5f5dc"
        android:background="#9370db"
        />
    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/linearLayout2" android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_rate_app"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:text="Rate"
            android:textSize="15dp"
            android:textColor="#f5f5dc"
            android:background="#66cdaa"

            />
        <Button
            android:id="@+id/btn_share_app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Share"
            android:textSize="15dp"
            android:textColor="#f5f5dc"
            android:background="#2683c2"
            />
        </LinearLayout>

</LinearLayout>